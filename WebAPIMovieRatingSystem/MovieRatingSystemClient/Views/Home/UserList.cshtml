@model IEnumerable<MovieRatingSystemClient.Models.User>

@{ ViewData["Title"] = "Users"; }

<h1>Users</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Ratings
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("See Ratings", "ShowRatings", new { id = item.UserId })
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteUser", new { id = item.UserId })
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Administration">Movies</a>
</div>

<script> var errmsg = "@ViewBag.err" </script>
<script src="~/js/alert.js"></script>